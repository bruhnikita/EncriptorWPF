<Window x:Class="TextEncryption.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шифрование текста" Height="423" Width="622">
    <Grid>
        <TextBox Name="InputTextBox" Margin="10" Height="100" TextWrapping="Wrap" AcceptsReturn="True" />
        <ComboBox Name="EncryptionMethodComboBox" Margin="10,120,10,0" Height="30" VerticalAlignment="Top">
            <ComboBoxItem Content="Шифр Цезаря"/>
            <ComboBoxItem Content="AES"/>
        </ComboBox>
        <TextBox Name="OutputTextBox" Margin="10,160,10,0" Height="100" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
        <Button Name="EncryptButton" Content="Зашифровать" Margin="10,270,10,0" Height="30" VerticalAlignment="Top" Click="EncryptButton_Click"/>
        <Button Name="SaveButton" Content="Сохранить" Margin="10,310,10,0" Height="30" VerticalAlignment="Top" Click="SaveButton_Click"/>
        <Button Name="ClearButton" Content="Очистить" Margin="10,350,10,0" Height="30" VerticalAlignment="Top" Click="ClearButton_Click"/>
    </Grid>
</Window>
